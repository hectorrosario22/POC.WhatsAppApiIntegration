    "version": "0.2.0",
    "configurations": [
        {
            "name": ".NET Launch",
            "type": "coreclr",
            "request": "launch",
            "program": "${workspaceFolder}/bin/Debug/net8.0/POC.WhatsAppApiIntegration.dll",
            "launchSettingsProfile": "https",
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "\\bNow listening on:\\s+(https?://\\S+)",
                "uriFormat": "%s/swagger",
                "killOnServerStop": true
            },
            "preLaunchTask": "build"
        }
    ]
}